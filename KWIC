#!/usr/bin/env perl
use lib '/home/wm/wm023/modules';

use Data::Dump;
use DBI;
use Mojolicious::Lite;
use Mojo::Log;
use Mojo::JSON 'to_json','from_json';

my $dbh = DBI->connect("dbi:SQLite:dbname=db/KWIC.db");

my $log = Mojo::Log->new;

sub insert {
	my ($string, $url) = @_;
	my $sth = $dbh->prepare("insert into KWIC(string,url) VALUES (?,?)");
	$sth->execute($string,$url);
}

sub search {
        my @regex = @_;
        my @searchValues = @_;
        my $sth = $dbh->prepare('select * from KWIC');
        $sth->execute;
        my $data = $sth->fetchall_arrayref({});


        my @results;
        ROW:
        for (@{$data}) {
			for my $reg (@regex) {
					my $matched = $_->{string} =~ /$reg/i ? 1 : 0;
					next ROW if (!$matched);
			}
			push @results,$_->{url};
        }
        return join ' ',@results;
}

get '/' => sub {
    my $c = shift;
    $c->render( template => 'index' );
};

post '/KWIC' => sub {
    my $c      = shift;
	my $data = $c->param('input');
	my $output = join '<br />',`echo '$data' | ./SOParser | uniq`;
    $c->render( 
		template => 'KWIC', 
		output => $output,
	);
};

post '/insert' => sub {
	my $c = shift;
	my $data = $c->req->json;
	$log->debug("Received from client: ");
	$log->debug(dd $data);

	my $returnData;
	for (@{$data}) {

		# insert into DB
		insert($_->{string},$_->{url}); 

		# send input to the ./SOParser
		chomp(my @shifted = `echo '$_->{string}' |  ./SOParser | uniq`);

		# Blank line showing up for some reason, log and delete
		$log->debug("Deleting ->" . $shifted[-1] ."<-");
		splice(@shifted,-1); 

		# Push the shifted lines into the output data structure
		for my $sh (@shifted) {
			push @{$returnData}, { pstring => $sh, purl => $_->{url} };
		}
	}

	# Echo data back to client
	$c->render(
		json => $returnData,
	);
};

post '/search' => sub {
	my $c = shift;
	my $data = $c->req->json;
	$log->debug("received from client");
	$log->debug(dd $data);
	$c->render(
		json => search(@{$data}),
	);
};

app->start;
__DATA__

@@ index.html.ep
% layout 'default';
% title 'Welcome';
<h1> KWIC </h1>
<form action="/KWIC" method="POST">
<textarea name="input" rows="20" cols="80"></textarea>
<br />
<input type="submit" value="Submit">
</form>

@@ KWIC.html.ep
% layout 'default';
% title 'Welcome';
<h3> Output: <br /><%== $output %> 

@@ layouts/default.html.ep
<!DOCTYPE html>
<html>
  <head><title><%= title %></title></head>
  <body><%= content %></body>
</html>
